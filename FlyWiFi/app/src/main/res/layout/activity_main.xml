<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="top|center"
    android:background="@drawable/bg"
    android:gravity="top|center"
    android:orientation="vertical"
    android:weightSum="480">

    <!-- 47 -76 -->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="76"
        android:gravity="center"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/wifi_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/home_height_item"
            android:background="@drawable/item_selector"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_and_margin_width"
            android:paddingRight="@dimen/padding_and_margin_width">

            <TextView
                android:id="@+id/wifi_title"
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_and_margin_width"

                android:text="WIFI" />

            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/wifi_title_image_Layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/wifi_title_image"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/padding_and_margin_width"
                    android:layout_marginRight="@dimen/padding_and_margin_width"
                    android:src="@drawable/back_icon" />
            </com.zhy.autolayout.AutoLinearLayout>

            <TextView
                android:id="@+id/wifi_title_append"
                style="@style/title_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/padding_and_margin_width"
                android:text="密码输入" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/home_padding"
        android:layout_marginRight="@dimen/home_padding"
        android:layout_marginTop="8px"
        android:layout_weight="320">

        <FrameLayout
            android:id="@+id/wifi_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" />
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>