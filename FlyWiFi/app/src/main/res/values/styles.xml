<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTopStatusDark</item>
        <item name="colorPrimaryDark">@color/colorTopStatusDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Theme.AppCompat.Light.DarkActionBar -->
    </style>

    <style name="BaseAppTheme" parent="AppTheme">

        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="title_style">
        <!-- Customize your theme here. -->
        <item name="android:textSize">33px</item>
        <item name="android:textColor">@color/colorItemPress</item>
    </style>
    <style name="TextStyle">
        <!-- Customize your theme here. -->
        <item name="android:textSize">28px</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="text_tip_style">
        <item name="android:layout_height">24px</item>
        <item name="android:textColor">@color/color_input_text</item>
        <item name="android:textSize">20px</item>
    </style>

</resources>
